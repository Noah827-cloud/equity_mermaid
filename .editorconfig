# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python 文件
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

# JSON 文件
[*.json]
charset = utf-8
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
charset = utf-8
trim_trailing_whitespace = false

# Batch 文件
[*.bat]
charset = utf-8
end_of_line = crlf

